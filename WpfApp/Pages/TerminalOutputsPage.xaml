<Page x:Class="HandyPresentationHelper.Pages.TerminalOutputsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Terminal Outputs"
      Background="Black">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Title -->
            <RowDefinition Height="*"/>
            <!-- Terminal output box -->
            <RowDefinition Height="Auto"/>
            <!-- STOP button -->
        </Grid.RowDefinitions>

        <!-- Centered Title -->
        <TextBlock Text="Terminal Outputs"
                   Foreground="White"
                   FontSize="32"
                   FontWeight="Bold"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,20"
                   Grid.Row="0"/>

        <!-- Terminal output box -->
        <TextBox Name="TerminalOutputTextBox"
                 Background="Black"
                 Foreground="Lime"
                 FontFamily="Consolas"
                 FontSize="14"
                 IsReadOnly="True"
                 Margin="35"
                 Padding="10"
                 VerticalScrollBarVisibility="Auto"
                 HorizontalScrollBarVisibility="Auto"
                 TextWrapping="Wrap"
                 Grid.Row="1"/>

        <!-- STOP button -->
        <Button Content="STOP!"
                Name="StopButton"
                Width="200"
                Height="60"
                FontSize="24"
                FontWeight="Bold"
                Background="Red"
                Foreground="White"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Margin="0,20,0,50"
                Click="StopButton_Click"
                Grid.Row="2"/>
    </Grid>
</Page>
